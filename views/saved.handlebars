<style media="screen">
  .card {
    border: 1px solid grey;
    margin: 10px;
    padding: 10px;
  }

  a {
    margin: 5px;
  }
</style>
<h1>Saved Articles</h1>
{{#if data.length}} {{#each data}} 


<div class="card">

  <div class="card-body">
    <h5 class="card-title">{{this.title}}</h5>
    <p class="card-text">{{this.link}}</p>
  </div>
</div>
{{/each}} {{else}}
<h3>No records found.</h3>
{{/if}}
<script type="text/javascript" src="./app.js"></script>